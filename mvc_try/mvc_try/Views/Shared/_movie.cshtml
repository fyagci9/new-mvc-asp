@model Movie

<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-5">
            <img src="/img/@Model.ImageUrl" alt="@Model.Title">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <div>
                    <a class="btn btn-primary" asp-controller="movie" asp-action="details" asp-route-id="@Model.MovieId">details</a>
                    <a class="btn btn-primary" asp-controller="movie" asp-action="edit" asp-route-id="@Model.MovieId">edit</a>
               
                    <form asp-controller="Movie" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="Title" value="@Model.Title" />
                        <input type="hidden" name="MovieId" value="@Model.MovieId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                         
                    </form>
                
                
                
                </div>
            </div>
        </div>
    </div>
</div>
